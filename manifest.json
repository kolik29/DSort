{
	"manifest_version": 2,
	"name": "DownloadSorter",
	"description": "Sorting downloaded files into folders according to extensions",
	"version": "1.0.0",
	"icons": {"128": "icon.png"},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"background": { 	
    	"scripts": [
    		"background.js",
    		"jquery.js"
    	]
  	},
	"content_scripts": [
    	{
      		"matches": [ "<all_urls>" ],
      		"js": [ 
      			"script.js",
    			"jquery.js"      			
      		 ]
    	}
  	],
	"permissions": [
		"activeTab",
		"downloads",
		"storage"
	]
}